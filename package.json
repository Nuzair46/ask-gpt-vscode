{
  "name": "ask-gpt-vscode",
  "displayName": "ask gpt vscode",
  "description": "chatgpt vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Ask GPT",
      "properties": {
        "ask-gpt-vscode.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for ask-gpt"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ask-gpt-vscode",
          "title": "Ask GPT",
          "icon": "images/logo.png"
        }
      ]
    },
    "views": {
      "ask-gpt-vscode": [
        {
          "type": "webview",
          "id": "ask-gpt.panelView",
          "name": "Ask GPT"
        }
      ]
    },
    "commands": [
      {
        "command": "ask-gpt-vscode.setApiKey",
        "title": "Set OpenAI API Key"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "chatgpt": "^5.1.2"
  }
}
